@model UTCAPPCMS.MVC.Models.GroupPrivilageViewModel
@{
    ViewData["Title"] = "Create";
}
@* Group Privilage *@
 
<form class="form" method="post" >
     
            

            <div class="row gutter-xs">
                <div class="col-lg-9"></div>

                <div class="col-lg-3 col-md-6" style="text-align:right">
                    
                    <button class="btn btn-danger btn-sm btn-labeled" id="btn_Save">
                        <span class="btn-label">
                            <span class="icon icon-save icon-lg icon-fw"></span>
                        </span>
                        Save
                    </button>
                </div>
            </div>


            <div class="panel m-b-lg">

                <ul class="nav nav-tabs nav-justified">

                    <li class="active"><a href="#Group" data-toggle="tab">User Group</a></li>

                    <li><a href="#Privilage" data-toggle="tab">Privilage</a></li>

                </ul>

                <div class="tab-content">

                    <div class="tab-pane fade active in" id="Group">
                        @*################################################ User Form [Admin User Table] ################################################*@

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row gutter-xs">
                            <div class="col-md-6">
                                <h4>User Group  Info</h4>
                            </div>
                        </div>

                        <div class="row gutter-xs">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">

                                        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                                        <input type="hidden" asp-for="Id" id="Edit_Hidden_Id" />
                                        <div class="form-group col-lg-6">
                                            <label>English Name</label>
                                            <input asp-for="_UserGroup.NameEn" type="text" class="form-control" placeholder="Enter Name" id="Input_EnglishName" />
                                             <span asp-validation-for="_UserGroup.NameEn" class="text-danger output"></span>
                                        </div>


                                        <div class="form-group col-lg-6">
                                            <label>Arabic Name</label>
                                            <input asp-for="_UserGroup.NameAr" type="text" class="form-control" placeholder="Username" id="Input_ArabicName" />
                                            <span asp-validation-for="_UserGroup.NameAr" class="text-danger output"></span>
                                        </div>

                                        <div class="form-group col-lg-6" id="divpad">
                                            <label class="control-label">IsEnable</label><br />
                                            <label class="switch switch-primary">
                                                <input asp-for="_UserGroup.IsEnable" class="form-control switch-input" type="checkbox" id="Input_IsEnable" checked>
                                                <span class="switch-track"></span>
                                                <span class="switch-thumb"></span>
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="Privilage">
                        @*################################################ Privilage  Form [ Privilage ] ################################################*@
                        @*User -> AdminUsers
                            Pages->FormPages*@
                        @* FormPage Table -> FormKey *@
                        @* UserPrivilage Table  View Add Edit Delete Search Print*@
                        <div class="row gutter-xs">

                            <div class="col-lg-12">
                                <div class="panel panel-body text-center" data-toggle="match-height">
                                    <table id="PrivList" class="table table-borderless table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Pages</th>
                                                <th>View</th>
                                                <th>Add</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                                <th>Search</th>
                                                <th>Print</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tableBody">
                                            @{int i = 0;}
                                            @foreach (var item in Model._FormPagePrivilagesList)
                                            {
                                                <input class="form-control itemId" type="hidden" asp-for="@item.Id" id="HiddenItemId" />
                                                i++;
                                                <tr>

                                                    <td align="left">@i</td>

                                                    <td align="left"> @item.FormKey </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.View" class="form-control switch-input" id="chbx_View" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.Add" class="form-control switch-input" id="chbx_Add" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.Edit" class="form-control switch-input" id="chbx_Edit" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.Delete" class="form-control switch-input" id="chbx_Delete" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.Search" class="form-control switch-input" id="chbx_Search" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                    <td align="left">
                                                        <label class="switch switch-primary">
                                                            <input asp-for="@item.Print" class="form-control switch-input" id="chbx_Print" type="checkbox">
                                                            <span class="switch-track"></span>
                                                            <span class="switch-thumb"></span>
                                                        </label>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
            <div class="col-lg-2">
                <a asp-action="Index">Back to List</a>
            </div>

     
    @* }*@
</form>
    

<script src="~/Jquery/jquery-3.5.1.js"></script>
<script src="~/JS/CreateAjaxScripts/GroupPrivilageScript.js"></script>